.col-md-6.col-md-offset-6
	%h1.main-header.text-center=image_tag('icon.jpg')
	%table.table
		%tr
			%td.col-md-4=link_to('Control panel', control_url)
			%td.col-md-4=link_to('Manage Tanks', manage_url)
			%td.col-md-4.text-right=link_to('About', about_url)

	%br
	-if @tanks.any?
		%h2.main-header Currently active Tanks
		-@tanks.each do |tank|
			%h4 tank.name
	-else
		%h2.main-header No active Tanks currently
