.col-md-6.col-md-offset-6
  .body
    -if user_signed_in?
      -if has_name?(current_user)
        ="current user: #{current_user.name}"
      -else
        ="current user email: #{current_user.email}"
   
    =render 'layouts/header'
    %h1.text-center
      %strong
        Ã†gir
    %table.table{style: 'color: #FFF;'}
      %tr
        %td.col-md-4=link_to('Manage Tanks', manage_url, style: 'color: #FFF')
        %td.col-md-4=link_to('About', about_url, style: 'color: #FFF')
        -if user_signed_in?
          %td.col-md-4.text-right=link_to('Logout', destroy_user_session_path, method: :delete, style: 'color: #FFF')
        -else
          %td.col-md-3.text-right=link_to('Login', new_user_session_path)

    %br
    -if @tanks.any?
      %h4.text-center Active Tanks
      -@tanks.each do |tank|
        %h3=tank.name

        %table.table
          %tr
            %td=button_to('info', tank, method: :get)
            %td=button_to('water change', tank, action: :water_change)
            -last = tank.last_water_change
            -if not_nil?(last)
              %td.text-right{style: 'color: #FFF'}="last water change: #{distance_of_time_in_words(last, Time.now)} ago (#{last.localtime})"
            -else
              %td.text-right{style: 'color: #FFF'} this tank has not yet had a water change
    -else
      %h2.main-header No active Tanks currently
