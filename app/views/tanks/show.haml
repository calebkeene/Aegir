%h3=@tank.name
%table.table.table-hover
  %tr
    %td
      %strong
        ="Volume:"
    %td=@tank.volume
  %tr
    %td
      %strong
        ="number of fish:"
    %td=@tank.fish_number
  %tr
    %td
      %strong
        ="last water change:"
    -last = @tank.last_water_change
    -if not_nil?(last)
      %td="#{distance_of_time_in_words(last, Time.now)} ago - (#{last})"
    -else
      %td this tank has not yet had a water change
%br
=link_to('home', root_url)